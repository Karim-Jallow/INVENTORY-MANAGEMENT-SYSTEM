@model INVENTORY_MANAGEMENT_SYSTEM.Models.Product

@{
    ViewData["Title"] = "Add Product";
}

<h2>Add Product</h2>

<form asp-action="AddProduct" method="post">
    <div class="form-group">
        <label asp-for="ProductName"></label>
        <input asp-for="ProductName" class="form-control" />
        <span asp-validation-for="ProductName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="CurrentStock"></label>
        <input asp-for="CurrentStock" class="form-control" type="number" min="0" />
        <span asp-validation-for="CurrentStock" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Description"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Category"></label>
        <input asp-for="Category" class="form-control" />
        <span asp-validation-for="Category" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Manufacturer"></label>
        <input asp-for="Manufacturer" class="form-control" />
        <span asp-validation-for="Manufacturer" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Model"></label>
        <input asp-for="Model" class="form-control" />
        <span asp-validation-for="Model" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="EnteredBy"></label>
        <input asp-for="EnteredBy" class="form-control" />
        <span asp-validation-for="EnteredBy" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="ReorderLevel"></label>
        <input asp-for="ReorderLevel" class="form-control" type="number" min="0" />
        <span asp-validation-for="ReorderLevel" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Add Product</button>
</form>

<a asp-action="Index" class="btn btn-secondary">Back to Home</a>
<style>
